{
    "kind": "collectionType",
    "collectionName": "episodes",
    "info": {
        "singularName": "episode",
        "pluralName": "episodes",
        "displayName": "Episode"
    },
    "options": {
        "draftAndPublish": true
    },
    "pluginOptions": {},
    "attributes": {
        "season": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "api::season.season",
            "inversedBy": "episodes"
        },
        "episodeNumber": {
            "type": "integer",
            "required": true
        },
        "title": {
            "type": "string",
            "required": true
        },
        "description": {
            "type": "text"
        },
        "vimeoHLS": {
            "type": "string",
            "required": true
        },
        "thumbnail": {
            "type": "media",
            "multiple": false,
            "allowedTypes": [
                "images",
                "files",
                "videos",
                "audios"
            ]
        },
        "duration": {
            "type": "integer"
        }
    }
}
